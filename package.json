{
  "name": "stepai-api",
  "version": "1.0.0",
  "description": "StepAI API 서버",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc --skipLibCheck",
    "pm2:start": "npm run build && npx pm2 start ecosystem.config.js",
    "pm2:stop": "npx pm2 stop stepai-api",
    "pm2:restart": "npx pm2 restart stepai-api",
    "pm2:delete": "npx pm2 delete stepai-api",
    "pm2:logs": "npx pm2 logs stepai-api",
    "deploy": "./deploy.sh",
    "build:simple": "node build-simple.js",
    "start": "node dist/index.js",
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "test": "jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "api",
    "ai",
    "typescript",
    "express",
    "mysql"
  ],
  "author": "StepAI Team",
  "license": "MIT",
  "dependencies": {
    "@types/axios": "^0.14.4",
    "@types/bcrypt": "^6.0.0",
    "axios": "^1.12.2",
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.6.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "multer": "^2.0.2",
    "mysql2": "^3.6.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "typescript": "^5.3.2",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/morgan": "^1.9.9",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.0",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "pm2": "^5.3.0",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
